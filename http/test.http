
### POST a new crawler
POST http://{{host}}:9003/crawlers
Content-Type: application/json

{
  "id": "ae683f02-7a5c-4a79-9c5c-ab93770c46f5",
  "name": "Test Crawler",
  "status": "CREATED",
  "config": {
    "indexPrefix": "crawler_",
    "schedule": "0 0 0 1 1 ? 2099",
    "startUrls": [
      "https://orf.at/"
    ],
    "filterOptions": {
      "siteExclusionPatterns": [
        ".*oesterreich.orf.*",
        ".*assets.*"
      ],
      "queryParameterExclusionPatterns": [
      ]
    },
    "requestOptions": {
      "requestTimeout": 1000,
      "retries": 3,
      "headers": [
        {
          "name": "User-Agent",
          "value": "Mozilla/5.0 (compatible"
        }
      ]
    },
    "actions": [
      {
        "indexName": "test_index",
        "pathsToMatch": [
          "https://orf.at/*"
        ],
        "selectorsToMatch": [
          ".products",
          "!.featured"
        ],
        "contentTypesToMatch": [
          "HTML",
          "PDF"
        ]
      }
    ]
  }
}

